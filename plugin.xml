<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.cranberrygame.cordova.plugin.closeatsecond"
    version="1.0.4">
	
    <name>Cordova CloseAtSecond plugin</name>
    <description>Cordova CloseAtSecond plugin</description>
    <author>Sang Ki Kwon (Cranberrygame)</author>		
    <license>MIT</license>
    <keywords>cordova, plugin, closeatsecond</keywords>
    <repo>https://github.com/cranberrygame/com.cranberrygame.cordova.plugin.closeatsecond</repo>
    <issue>https://github.com/cranberrygame/com.cranberrygame.cordova.plugin.closeatsecond/issues</issue> 	
	<engines>
	    <engine name="cordova" version=">=3.0.0" />
	</engines>	
	
    <js-module src="www/closeatsecond.js">
        <clobbers target="window.closeatsecond" />
    </js-module>
	
    <!-- android -->
    <platform name="android">
	    <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CloseAtSecond" >
                <param name="android-package" value="com.cranberrygame.cordova.plugin.closeatsecond.CloseAtSecond"/>
            </feature>
        </config-file>
		
        <source-file src="src/android/CloseAtSecond.java" target-dir="src/com/cranberrygame/cordova/plugin/closeatsecond" />		
    </platform>

    <!-- wp8 -->
    <platform name="wp8">
        <config-file target="config.xml" parent="/*">
            <feature name="CloseAtSecond">
                <param name="wp-package" value="CloseAtSecond"/>
            </feature>
        </config-file>

        <source-file src="src/wp8/CloseAtSecond.cs" />
    </platform>	
</plugin>